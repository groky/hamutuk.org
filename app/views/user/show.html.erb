<table class="profile" summary="Profile Information">
	<tr>
		<td class="main">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.username %>
			</h1>
		</td>
		
		<td class="sidebar round">
			<strong>Username</strong> <%= @user.username %><br/>
			<strong>URL </strong><%= link_to user_path(@user), @user %>
		</td>
	</tr>
</table>
